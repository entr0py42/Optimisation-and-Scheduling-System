@model List<Optimisation_and_Scheduling_System.Models.DriverModel>
@{
    ViewBag.Title = "All Drivers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>All Drivers</h2>
        </div>
        <div class="col-md-6 text-right">
            <a href="@Url.Action("Index", "Manager")" class="btn btn-secondary">
                <i class="fa fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            No drivers found in the system.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Working Since</th>
                        <th>Daytime Hours</th>
                        <th>Nighttime Hours</th>
                        <th>Weekend Hours</th>
                        <th>Weekend Night Hours</th>
                        <th>Paid Days Off</th>
                        <th>Unpaid Days Off</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var driver in Model)
                    {
                        <tr>
                            <td>@driver.Id</td>
                            <td>@driver.Name</td>
                            <td>@driver.WorkerSince.ToShortDateString()</td>
                            <td>@driver.DayTimeHours</td>
                            <td>@driver.NighttimeHours</td>
                            <td>@driver.WeekendHours</td>
                            <td>@driver.WeekendNightHours</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            // You can add any client-side functionality here if needed
        });
    </script>
} 