@{
    ViewBag.Title = "Run Driver Scheduling Optimization";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Run Driver Scheduling Optimization</h2>
            <p class="lead">Generate an optimized weekly schedule for all drivers and routes.</p>

            <div class="alert alert-info">
                <strong>Note:</strong> This process requires the GurobiAtamalar2.py script to be present in the parent directory.
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <h4>Error</h4>
                    <div style="white-space: pre-wrap;">@Html.ValidationSummary(false)</div>
                </div>
            }

            <div class="card mt-4">
                <div class="card-header bg-primary text-white">
                    <h4>Optimization Parameters</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("RunDriverScheduling", "Optimization", FormMethod.Post, new { @class = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <p>The optimization will use the following criteria:</p>
                        <ul>
                            <li><strong>Primary Objective:</strong> Driver preferences for routes and shifts</li>
                            <li><strong>Secondary Objective:</strong> Driver performance metrics</li>
                            <li><strong>Tertiary Objective:</strong> Driver experience years</li>
                            <li><strong>Additional Factor:</strong> Gender diversity</li>
                        </ul>

                        <p>The optimization will enforce the following constraints:</p>
                        <ul>
                            <li>Each shift must have exactly one primary driver</li>
                            <li>Each driver works at most one shift per day, or serves as a backup</li>
                            <li>Backup drivers can cover up to two shifts</li>
                            <li>Maximum weekly hours per driver is 48 hours</li>
                        </ul>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-lg" id="btnRunOptimization">
                                <i class="fa fa-cog"></i> Run Optimization
                            </button>
                            <a href="@Url.Action("Index", "Optimization")" class="btn btn-secondary btn-lg">
                                <i class="fa fa-arrow-left"></i> Back
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Show loading indicator when form is submitted
            $('form').on('submit', function () {
                $('#btnRunOptimization').html('<i class="fa fa-spinner fa-spin"></i> Processing...').prop('disabled', true);
                return true;
            });
        });
    </script>
} 