@model Optimisation_and_Scheduling_System.Models.OptimizationResultModel

@{
    ViewBag.Title = "Driver Scheduling Results";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Driver Scheduling Results</h2>
            <p class="lead">Optimization completed on @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>

            <div class="alert alert-success">
                <strong>Status:</strong> @Model.Status
            </div>

            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4>Schedule Overview</h4>
                </div>
                <div class="card-body">
                    <p>
                        The optimization engine has generated a weekly schedule for all drivers and routes.
                        The schedule includes primary driver assignments and backup driver assignments.
                    </p>
                    <div class="btn-group">
                        <a href="@Url.Action("GetResultsJson", "Optimization")" class="btn btn-secondary" target="_blank">
                            <i class="fa fa-download"></i> Download JSON
                        </a>
                        <a href="@Url.Action("Index", "Optimization")" class="btn btn-primary">
                            <i class="fa fa-home"></i> Back to Optimization Hub
                        </a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <ul class="nav nav-tabs card-header-tabs" id="resultsTabs" role="tablist">
                                @for (int day = 1; day <= 7; day++)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @(day == 1 ? "active" : "")" id="day@(day)-tab" data-toggle="tab" href="#day@(day)" role="tab">
                                            Day @day
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content" id="resultsTabsContent">
                                @for (int day = 1; day <= 7; day++)
                                {
                                    <div class="tab-pane fade @(day == 1 ? "show active" : "")" id="day@(day)" role="tabpanel">
                                        <h4>Primary Assignments - Day @day</h4>
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered">
                                                <thead class="bg-light">
                                                    <tr>
                                                        <th>Route</th>
                                                        <th>Shift</th>
                                                        <th>Driver ID</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model.Assignments != null && Model.Assignments.ContainsKey($"Day_{day}"))
                                                    {
                                                        foreach (var assignment in Model.Assignments[$"Day_{day}"])
                                                        {
                                                            <tr>
                                                                <td>@assignment.Key.Split('_')[1]</td>
                                                                <td>@assignment.Key.Split('_')[3]</td>
                                                                <td>@string.Join(", ", assignment.Value)</td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td colspan="3" class="text-center">No assignments for Day @day</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>

                                        <h4 class="mt-4">Backup Assignments - Day @day</h4>
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered">
                                                <thead class="bg-light">
                                                    <tr>
                                                        <th>Driver ID</th>
                                                        <th>Backup For (Route, Shift)</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model.Backups != null && Model.Backups.ContainsKey($"Day_{day}"))
                                                    {
                                                        foreach (var backup in Model.Backups[$"Day_{day}"])
                                                        {
                                                            <tr>
                                                                <td>@backup.Key.Split('_')[1]</td>
                                                                <td>
                                                                    @if (backup.Value != null && backup.Value.Count > 0)
                                                                    {
                                                                        foreach (var routeShift in backup.Value)
                                                                        {
                                                                            <span class="badge badge-info mr-2">
                                                                                Route @routeShift[0], Shift @routeShift[1]
                                                                            </span>
                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        <span>No specific backup assignments</span>
                                                                    }
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td colspan="2" class="text-center">No backup assignments for Day @day</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Tab navigation initialization if needed
            $('#resultsTabs a').on('click', function (e) {
                e.preventDefault();
                $(this).tab('show');
            });
        });
    </script>
} 